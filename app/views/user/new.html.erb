<head>
  <title>Register validation</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f1f1f1;
      margin: 0;
      padding: 0;
    }

    .container {
      height: 100%;
      width: 400px;
      margin: 100px auto;
      padding: 50px;
      background-color: #fff;
      border-radius: 50px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    h2 {
      text-align: center;
    }

    .texto {
      width: 100%;
      padding: 10px;
      margin-bottom: 20px;
      border: 1px solid #ccc;
      border-radius: 3px;
    }

    input[type="submit"] {
      width: 100%;
      padding: 10px;
      background-color: #4caf50;
      border: none;
      color: #fff;
      cursor: pointer;
      border-radius: 3px;
    }

    input[type="submit"]:hover {
      background-color: #45a049;
    }
  </style>
</head>
<body>
  <div class="container">
    <h2>Registro de usuario</h2>
    <%= form_with url: create_user_path ,model:@user do |us|%>
      <% @user.errors.full_messages.each do |error|%>
        <div style="color: red">
          <%= error %>
          <br>
        </div>
      <%end%>
      <br>
      <div>
        <%= us.label :name, "Nombre" %>
        <%= us.text_field :name, class: "texto" %>
      </div>

      <div>
        <%= us.label :surname, "Apellido" %>
        <%= us.text_field :surname, class: "texto" %>
      </div>

      <div>
        <%= us.label :email, "Correo electronico" %>
        <%= us.email_field :email, class: "texto" %>
      </div>

      <div>
        <%= us.label :password, "Contraseña" %>
        <%= us.password_field :password, class: "texto" %>
      </div>

      <%= us.submit "registrar" %>
      <%= link_to "¿Ya te has registrado?", :serch_user, class: "index-link" %>

    <%end%>
    <div></div>
  </div>
</body>
</html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PÃ¡gina de Usuarios con Calendario</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f4f8;
            margin: 0;
            padding: 0;
            justify-content: center;
            align-items: center;
        }

        .container{
          background-color: white;
          height: 500px;
          width: 900px;
          max-width: max-content;
          max-height: max-content;
          margin: 100px auto;
          border-radius: 50px;
          box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
          padding: 50px;
        }
        .container2{
          display: flex;
          justify-content: center;
          align-items: center;
        }
        
        header {
            background-color: #3a6ea5;
            padding: 20px;
            text-align: center;
            color: white;
        }

        .calendar table {
            width: 100%;
            border-collapse: collapse;
        }

        .calendar th,
        .calendar td {
            padding: 10px;
            text-align: center;
            border: 1px solid #e0e0e0;
        }

        .calendar th {
            background-color: #3a6ea5;
            color: white;
        }

        .calendar td:hover {
            background-color: #e0f0ff;
        }

        .calendar .selected {
            background-color: #3a6ea5;
            color: white;
        }

        .calendar .today {
            background-color: #a5c9e0;
            font-weight: bold;
        }
        .dia {
            color: black;
            padding: 10px 20px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            border-radius: 4px;
        }
        
        .dia-del-evento {
            color: green;
            padding: 10px 20px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            border-radius: 4px;
        }

        .seleccion {
          display: flex;
          justify-content: center;
          align-items: center;
          width: 100%;
          max-width: max-content;
          padding: 10px 20px;
          text-align: center;
          text-decoration: none;
          display: inline-block;
          border-radius: 4px;
        }

        .generar {
          justify-content: center;
          align-items: left;
          color: black;
          padding: 10px 20px;
          text-align: center;
          display: inline-block;
          border-radius: 5px;
          background-color: #f0f4f8;
        }
        .generar:hover {
          background-color: #a5c9e0;
          cursor: pointer;
        }

    </style>
</head>
<% generarOpcionesReserva %>
<body>
  <div class= "container">
    <header>
        <h1><%= "Reservas del Evento: #{@evento.eventName}"  %></h1>
    </header>
    <div class= "container2">
      <div class="calendar">
        <%= month_calendar do |date| %>
          <% if date.day == @evento.dia.day && date.month == @evento.dia.month %>
            <div class="dia-del-evento">
              <%= date.day %> 
            </div>
          <% else %>
            <div class="dia">
              <%= date.day %> 
            </div>
          <% end %>
        <% end %>
      </div>
      <div class = "seleccion">
        <% @botones.each do |boton,_| %>
          <%= button_to boton, new_reserva_path(id1: @evento.id,horarios:@botones), method: :get , class: "generar" %>
        <% end %>
      </div>
    </div>
  </div>
</body>
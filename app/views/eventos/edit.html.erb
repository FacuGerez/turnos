<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Arreglo de los formularios</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f4f8;
            margin: 0;
            padding: 0;
        }

        header {
            background-color: #A569BD;
            padding: 20px;
            text-align: center;
            color: white;
        }

        .formulario {
            display: flex;
            justify-content: center;
            align-items: left;
            height: 400px;
            width: 500px;
            margin: 100px auto;
            padding: 50px;
            background-color: #fff;
            border-radius: 5px;
        }
        
        .alertaDeError {
          justify-content: center;
          align-items: left;
        }

        .eliminar {
          justify-content: center;
          align-items: left;
          color: black;
          padding: 10px 20px;
          text-align: center;
          display: inline-block;
          border-radius: 5px;
          background-color: #f0f4f8;
        }
        .eliminar:hover {
          background-color: #a5c9e0;
          cursor: pointer;
        }

        .texto,
        .fechas {
          width: 100%;
          padding: 10px;
          margin-bottom: 10px;
          border: 2px solid #ccc;
          border-radius: 3px;
        }

        .fechas {
          padding: 5px;
          margin-bottom: 4px;
        }
        
    </style>
</head>
<body>
  <header>
    <h1>El evento es : <%= @evento.eventName %></h1>
  </header>
  <div class="formulario">
    <div class="alertaDeError">
      <% flash.each do |key, value| %>
        <%= value %>
      <%end%>
    </div>
    <%= button_to "Eliminar este evento", delete_evento_path(id1: @evento.id), method: :delete , class: "eliminar" %>
    <%= form_with url: update_evento_path, model: @evento do |us|%> 

      <div>
        <%= us.label :eventName, "Nombre del evento :", style: "display: block" %>
        <%= us.text_field :eventName, class: 'texto' %>
      </div>

      <div>
        <%= us.label :description, "La descripcion", style: "display: block" %>
        <%= us.text_field :description, class: 'texto' %>
      </div>

      <div>
        <%= us.label :start_time, "Empieza:", style: "display: block" %>
        <%= us.datetime_field :start_time , class: 'fechas'%>
      </div>

      <div>
        <%= us.label :end_time, "Termina:", style: "display: block" %>
        <%= us.datetime_field :end_time , class: 'fechas'%>
      </div>

      <div>
        <%= us.label :plazoDeTiempo , "Plazo de las reuniones:", style: "display: block" %>
        <%= us.time_field :plazoDeTiempo , class: 'fechas'%>
      </div>

      <div>
        <%= us.submit %>
      </div>

      <div>
        <%= link_to "Show this evento", @evento %> |
      </div>

    <%end%>
  </div>
</body>


